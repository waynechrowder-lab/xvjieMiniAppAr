/* packageNav/components/vkHint/vkHint.wxss */
.auth_layer{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 140;
}
.hint_content{
  position: absolute;
  width: 562rpx;
  box-sizing: border-box;
  padding: 54rpx 28rpx 40rpx;
  background-color: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 16rpx;
}
.hint_title{
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  color: #141A27;
  margin-bottom: 36rpx;
}
.hint_txt{
  font-size: 28rpx;
  font-weight: 400;
  color: #141A27;
  line-height: 52rpx;
  margin-bottom: 66rpx;
}
.hint_btn{
  width: 464rpx;
  height: 96rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #C4A872;
  font-weight: 600;
  margin: 0 auto;
}
.hint_operate{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 60rpx;
}
.hint_operate2{
  justify-content: center;
}
.hint_check{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  font-weight: 400;
  color: #686D77;
}
.hint_check image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}
.hint_view_btn{
  font-size: 26rpx;
  font-weight: 400;
  color: #BD9E62;
}
.hint_bold{
  font-weight: 600;
}