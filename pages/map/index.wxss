page, .page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* 整屏容器 */
.map-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 地图内部：用 transform 做位移 + 缩放 */
.map-inner {
  position: absolute;
  left: 0;
  top: 0;
  /* 这两个按你的地图分辨率来，这里用你之前的 2048x1365 */
  width: 2048rpx;
  height: 1365rpx;

  transform-origin: 0 0;  /* ★ 重要：以左上角为原点做数学变换 */
}

/* 地图图像自身占满 map-inner */
.map-img {
  width: 100%;
  height: 100%;
  display: block;
}
/* 高清切片：绝对定位到容器中 */
.map-tile {
  position: absolute;
  display: block;
  transition: opacity 0.3s;   /* 加一点淡入动画 */
}
/* 点位按钮：和之前一样 */
.poi {
  position: absolute;
  transform: translate(-50%, -100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poi-label {
  padding: 10rpx 12rpx;
  background-color: rgba(60, 60, 60, 0.9);
  color: #fff;
  border-radius: 24rpx;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poi-label text {
  display: block;
  line-height: 1.2;
}

.poi-pin {
  width: 10rpx;
  height: 10rpx;
  border-radius: 999rpx;
  background-color: #333;
  margin-top: 4rpx;
}
