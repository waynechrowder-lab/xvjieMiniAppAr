page, .page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f3e9;
}

/* 顶部区域：占屏幕高度 20% */
.ar-header {
  position: relative;
  width: 100%;
  height: 28vh;          /* ★ 关键：占屏幕 20% 高度 */
  overflow: hidden;
}

/* 背景图铺满整个 header */
.ar-header-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;          /* 占满 20vh 的容器 */
  display: block;
}
/* 标题行：显示在图片上方 */
.ar-header-title-row {
  position: relative;
  z-index: 1;             /* 比图片高即可 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 32rpx 24rpx;  /* 用 padding 控制在图上的位置 */
  flex-direction: column;
  align-items: flex-start;   /* ★ 改这里 */
}

.ar-header-title {
  font-size: 55rpx;
  font-weight: 600;
  color: #654321;
}
.ar-header-desc{
  position: relative;
  padding: 50rpx 20rpx 24rpx;
}
.ar-header-desc text {
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
  color: #654321;
}

/* 打卡进度卡片 */
/* 最外层白色圆角卡片 */
.progress-card {
  margin: -80rpx 0rpx 16rpx;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  background-color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  height: 180rpx;
  z-index: 1;
}

/* 用来做相对定位，给头像悬浮用 */
.progress-card-inner {
  position: relative;
  padding-left: 0rpx; /* 留出给头像的空间 */
}

/* 中间淡黄色区域，比白底略小 */
.progress-panel {
  background-color: #fff4e1;
  border-radius: 32rpx;
  margin: 24rpx 0rpx 16rpx;
  padding: 24rpx 32rpx;
  height: 80rpx;
}

/* 第一行：左文字 + 右百分比 */
.progress-panel-row {
  padding-left: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-panel-row-full {
  padding-left: 100rpx;
  margin-right: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #60452a;
}

.progress-percent {
  font-size: 40rpx;
  color: #60452a;
}
/* 进度条所在的一行：左条右按钮 */
.progress-bar-row {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;              /* 条和按钮之间的间距，可调 */
}

/* 进度条 */
.progress-bar-bg {
  margin-left: 100rpx;
  flex: 1;                 /* ★ 代替原来的 width:100% */
  height: 16rpx;
  border-radius: 999rpx;
  background-color: #fffdf3;
  overflow: hidden;
}
.progress-bar-bg-full {
  margin-left: 100rpx;
  margin-right: 100rpx;
  flex: 1;                 /* ★ 代替原来的 width:100% */
  height: 16rpx;
  border-radius: 999rpx;
  background-color: #f7e2c0;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background-color: #8a5a20;
}

/* 头像：与淡黄区域同级，悬浮在前方 */
.progress-avatar {
  position: absolute;
  left: 0;
  bottom: 0;          /* 让人物站在黄条底部，你可以微调 */
  width: 126rpx;      /* 宽度按效果调，大一点更接近你的图 */
  height: 153rpx;     /* 高度按角色图比例调 */
  z-index: 2;
}

.progress-avatar-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 头像：与淡黄区域同级，悬浮在前方 */
.progress-award {
  position: absolute;
  right: 0;
  bottom: 0;          /* 让人物站在黄条底部，你可以微调 */
  width: 120rpx;      /* 宽度按效果调，大一点更接近你的图 */
  height: 120rpx;     /* 高度按角色图比例调 */
}

.progress-award-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 打卡点位标题 */
.section-header {
  padding: 16rpx 32rpx 8rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #6e4818;
}

/* 列表滚动区域：只占剩余高度 */
.checkin-scroll {
  flex: 1;
  height: 0;                 /* 配合 flex:1 占满剩余空间 */
  padding: 10rpx 32rpx;
  box-sizing: border-box;
}

.scroll-bottom-space {
  height: 200rpx;            /* 防止被底部 tabbar 遮挡 */
}

/* 单个打卡卡片 */
/* 整张打卡卡片容器 */
.checkin-card {
  position: relative;
  margin-top: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  height: 300rpx;                /* 卡片高度，可按视觉微调 */
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.08);
}

/* 背景封面图：占满整个卡片 */
.checkin-card-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

/* 内容层：把左条和右上状态叠在封面图上 */
.checkin-card-content {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 左侧渐变信息条：从左到右渐变消失 */
.checkin-card-left {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 300rpx;                 /* 信息条宽度，可调整 */
  padding: 24rpx 16rpx;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 编号、名称、提示 */
.checkin-index {
  font-size: 35rpx;
  font-weight: 300;
  color: #ffffff;
}

.checkin-name {
  margin-top: -80rpx;
  font-size: 55rpx;
  font-weight: 300;
  color: #ffffff;
}

.checkin-tip {
  font-size: 28rpx;
  font-weight: 300;
  color: #ffffff;
}

/* 右上角状态外壳：摆放位置 */
.checkin-status-wrapper {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
}

/* 白色圆角底：内部上下布局（上图标，下文字） */
.checkin-status-box {
  width: 140rpx;
  height: 200rpx;
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
  background-color: #FFF7F0;

  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.checkin-status-icon {
  width: 200rpx;
  margin: -25rpx -30rpx;
}

.checkin-status-text {
  opacity: 0;
  margin-top: -32rpx;
  display: block;
  text-align: center;        /* 水平居中 */
  font-size: 32rpx;
  line-height: 1.3;          /* 配合 padding，让字在中间，不贴底 */
  color: #ffffff;
}
.checkin-status-text-bg {
  margin-top: -10rpx;
  margin-bottom: 0;
  box-sizing: border-box;

  padding: 6rpx 0;           /* 只做上下 padding，控制高度 */

  margin-left: -15rpx;
  height: 60rpx;
  border-radius: 30rpx;      /* 保留你原来的圆角 */
  width: 180rpx;
}

.checkin-status-text-bg-todo {
  margin-top: -10rpx;
  margin-left: -25rpx;

  border-radius: 30rpx;      /* 保留你原来的圆角 */
  width: 190rpx;
  height: 69rpx;
  /* 这里换成你的上下渐变（或者先用纯色调试） */
  /* background: linear-gradient(180deg, #ffe7ba, #ff944a); */
  background-image: url("https://shanghai-mashu-wxapp.oss-cn-shanghai.aliyuncs.com/ui/zhengding/checkin/uncheckinButton.png");
  background-size: contain;
}

.checkin-status-text-bg-done{
  margin-top: -10rpx;
  margin-left: -25rpx;
  border-radius: 30rpx;      /* 保留你原来的圆角 */
  width: 190rpx;
  height: 69rpx;
  /* 这里换成你的上下渐变（或者先用纯色调试） */
  /* background: linear-gradient(180deg, #ffe7ba, #ff944a); */
  background-image: url("https://shanghai-mashu-wxapp.oss-cn-shanghai.aliyuncs.com/ui/zhengding/checkin/checkinButton.png");
  background-size: contain;
}

/* 弹窗 */
/* 弹窗遮罩：竖向居中偏上 */
.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.65);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: flex-start;  /* 让弹窗靠上 */
  padding-top: 420rpx;      /* 往下一点，看着更居中偏上 */
}

/* 弹窗本体：上下结构 */
.popup {
  position: relative;
  width: 92%;
  min-height: 100rpx;
  height: 65%;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.popup-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.popup-award {
  position: absolute;
  top: 200rpx;
  width: 690rpx;
  height: 1080rpx;
  overflow: hidden;
  background-image: url("https://shanghai-mashu-wxapp.oss-cn-shanghai.aliyuncs.com/ui/zhengding/checkin/checkin-award-panel.png");
  background-size: contain;
}

.popup-cover-img-award{
  position: absolute;
  margin: 180rpx 90rpx;
  background-image: url("https://shanghai-mashu-wxapp.oss-cn-shanghai.aliyuncs.com/ui/zhengding/checkin/checkin-awardl.png");
  background-size: contain;
  width: 498rpx;
  height: 640rpx;
}

/* 标题行固定高度 */
/* 标题行跟图片之间留一点间距 */
.popup-header {
  margin-top: 70rpx;
  position: relative;      /* 必须加：让子元素 absolute 以它为参考 */
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-header-award {
  align-items: center;
  padding: 24rpx 28rpx 12rpx;  /* 左右 28rpx，方便和图片对齐 */
}

.popup-title {
  position: absolute;       /* 绝对定位 */
  left: 50%;
  transform: translateX(-50%);  /* 水平居中 */
  font-size: 40rpx;
  font-weight: 600;
  color: #664812;
}

.popup-title-award {
  font-size: 45rpx;
  font-weight: 400;
  color: #654321;
  margin: 100rpx; /*居中*/
}

.popup-close {
  position: absolute;
  right: -10rpx;        /* 可以调整，比如 20rpx */
  top: -20rpx;          /* 可以调整，比如 20rpx */
  font-size: 45rpx;
  padding: 20rpx;     /* 点击区域更大更好点 */
  color: rgba(34, 34, 34, 0);
}

/* 封面区域：左右和标题对齐，固定高度做裁剪 */
.popup-cover {
  flex-shrink: 0;
  width: 100%;
  height: 244rpx;          /* 325:132 的比例，高度你可以微调 */
  padding: 0 45rpx;        /* ★ 和标题左右对齐 */
  box-sizing: border-box;
  margin-top: 50rpx;
}

.popup-cover-award {
  flex-shrink: 0;
  width: 100%;
  height: 800rpx;
  padding: 0 28rpx;        /* ★ 和标题左右对齐 */
  box-sizing: border-box;
}

/* 封面图：铺满这个区域，居中裁剪 + 圆角 */
.popup-cover-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 文本区域：占据中间、可滚动 */
.popup-content {
  width: 95%;
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 240rpx;
  padding: 24rpx 50rpx;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0.5px;
  height: 10px;
  color:#ffffff00;
}
