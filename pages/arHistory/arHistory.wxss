/* 弹窗 */
/* 弹窗遮罩：竖向居中偏上 */
.popup-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.65);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: flex-start;  /* 让弹窗靠上 */
  padding-top: 420rpx;      /* 往下一点，看着更居中偏上 */
}

/* 弹窗本体：上下结构 */
.popup {
  position: relative;
  width: 92%;
  min-height: 100rpx;
  height: 65%;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.popup-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.popup-award {
  margin-top: -100rpx;
  width: 684rpx;
  height: 944rpx;
  /* max-height: 100%; */
  /* background-color: rgb(255, 242, 215); */
  border-radius: 24rpx;
  overflow: hidden;
  background-image: url("https://shanghai-mashu-wxapp.oss-cn-shanghai.aliyuncs.com/ui/zhengding/histroy/pop-panel-2.png");
  background-size: contain;
}

.popup-header-award {
  align-items: center;
  padding: 24rpx 28rpx 12rpx;  /* 左右 28rpx，方便和图片对齐 */
}

.popup-close-award {
  position: absolute;
  right: 50rpx;
  font-size: 45rpx;
  color: rgba(34, 34, 34, 0);
}

/* 标题行固定高度 */
/* 标题行跟图片之间留一点间距 */
.popup-header {
  margin-top: 70rpx;
  position: relative;      /* 必须加：让子元素 absolute 以它为参考 */
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-title {
  position: absolute;       /* 绝对定位 */
  left: 50%;
  transform: translateX(-50%);  /* 水平居中 */
  font-size: 40rpx;
  font-weight: 600;
  color: #664812;
}

.popup-title-award {
  position: absolute;       /* 绝对定位 */
  font-size: 35rpx;
  font-weight: 400;
  color: #AC371F;
  margin: 20rpx 130rpx; /*居中*/
}

.popup-close {
  position: absolute;
  right: -10rpx;        /* 可以调整，比如 20rpx */
  top: -20rpx;          /* 可以调整，比如 20rpx */
  font-size: 45rpx;
  padding: 20rpx;     /* 点击区域更大更好点 */
  color: rgba(34, 34, 34, 0);
}

/* 封面区域：左右和标题对齐，固定高度做裁剪 */
.popup-cover {
  flex-shrink: 0;
  width: 100%;
  height: 244rpx;          /* 325:132 的比例，高度你可以微调 */
  padding: 0 45rpx;        /* ★ 和标题左右对齐 */
  box-sizing: border-box;
  margin-top: 50rpx;
}
.popup-cover-award {
  flex-shrink: 0;
  width: 100%;
  height: 800rpx;
  padding: 0 28rpx;        /* ★ 和标题左右对齐 */
  box-sizing: border-box;
}

/* 封面图：铺满这个区域，居中裁剪 + 圆角 */
.popup-cover-img {
  width: 100%;
  height: 100%;
  display: block;
  transform: translate(0%, 0%);
}

.popup-cover-img-2 {
  width: 80%;
  height: 80%;
  display: block;
  transform: translate(12%, 25%);
}

/* 文本区域：占据中间、可滚动 */
.popup-content {
  width: 95%;
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 240rpx;
  padding: 24rpx 50rpx;
  box-sizing: border-box;
}
::-webkit-scrollbar {
  width: 0.5px;
  height: 10px;
  color:#ffffff00;
}
.popup-desc {
  font-size: 26rpx;
  line-height: 1.4;
  color: #664812;
}

/* 底部按钮：固定在最下 */
/* 按钮所在的一行：负责右对齐 */
.popup-btn-row {
  position: absolute;
  bottom: 60rpx;       /* ★ 按钮向上移动的关键！想多少就是多少 */
  left: 0;
  width: 80%;
