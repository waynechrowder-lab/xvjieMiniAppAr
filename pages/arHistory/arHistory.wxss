page, .page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f3e9;
}

/* 顶部区域 */
.ar-header {
  position: relative;
  width: 100%;
  height: 32vh;          /* ★ 关键：占屏幕 20% 高度 */
  overflow: hidden;
}

/* 背景图铺满整个 header */
.ar-header-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;          /* 占满 20vh 的容器 */
  display: block;
}

.ar-header-title-row {
  position: relative;
  z-index: 1;             /* 比图片高即可 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 32rpx 24rpx;  /* 用 padding 控制在图上的位置 */
  flex-direction: column;
  align-items: flex-start;   /* ★ 改这里 */
}

.ar-header-title {
  font-size: 55rpx;
  font-weight: 600;
  color:#65460C
}

.ar-header-desc{
  position: relative;
  padding: 0rpx 33rpx 24rpx;
}
.ar-header-desc text {
  display: block;
  font-size: 30rpx;
  line-height: 1.4;
  color: #654B19;
}
.ar-header-desc-context{
  position: relative;
  padding: 20rpx 48rpx 24rpx;
}
.ar-header-desc-context text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #654B19;
}


